<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.more.MoreFragment">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_more"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:padding="16dp"
        android:background="?attr/colorPrimaryVariant"
        android:textColor="@color/white"/>

    <LinearLayout
        android:id="@+id/rowLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageLanguage"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_earth_black_24dp"
            app:tint="?attr/iconTint" />

        <TextView
            android:id="@+id/textLanguage"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="@string/more_language"
            android:textSize="16sp"
            android:layout_marginStart="16dp"/>
    </LinearLayout>
</LinearLayout>