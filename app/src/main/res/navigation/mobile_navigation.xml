<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_entries">

    <fragment
        android:id="@+id/navigation_entries"
        android:name="com.meowney.ui.entries.EntriesFragment"
        android:label="@string/title_entries"
        tools:layout="@layout/fragment_entries" >
        <action
            android:id="@+id/action_navigation_entries_to_addEntryFragment"
            app:destination="@id/addEntryFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_stats"
        android:name="com.meowney.ui.stats.StatsFragment"
        android:label="@string/title_stats"
        tools:layout="@layout/fragment_stats" />

    <fragment
        android:id="@+id/navigation_more"
        android:name="com.meowney.ui.more.MoreFragment"
        android:label="@string/title_more"
        tools:layout="@layout/fragment_more" >
        <action
            android:id="@+id/action_navigation_more_to_aboutFragment"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_navigation_more_to_themingFragment"
            app:destination="@id/themingFragment" />
    </fragment>

    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.meowney.ui.more.AboutFragment"
        android:label="@string/title_about"
        tools:layout="@layout/fragment_about" />

    <fragment
        android:id="@+id/themingFragment"
        android:name="com.meowney.ui.more.ThemingFragment"
        android:label="@string/title_app_colors"
        tools:layout="@layout/fragment_theming" />

    <fragment
        android:id="@+id/addEntryFragment"
        android:name="com.meowney.ui.entries.AddEntryFragment"
        android:label="@string/title_add_entry"
        tools:layout="@layout/fragment_add_entry" />
</navigation>