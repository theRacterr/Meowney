<resources>
    <!-- Base application theme. -->
    <style name="Theme.Meowney" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_700</item>
        <item name="colorPrimaryVariant">@color/green_900</item>
        <item name="colorOnPrimary">@color/white_200</item>

        <!-- Icon color. -->
        <item name="iconTint">@color/black</item>

        <!-- Background color. -->
        <item name="backgroundColor">@color/white_200</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Profit and deficit colors. -->
        <item name="profitColor">@color/green_500</item>
        <item name="deficitColor">@color/red_500</item>
    </style>
</resources>