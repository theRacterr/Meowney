<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.Meowney" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_green_700</item>
        <item name="colorPrimaryVariant">@color/light_green_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimaryVariant">@color/grey_400</item>
        <item name="colorOnPrimaryRipple">@color/green_500_ripple</item>

        <!-- Icon color. -->
        <item name="iconTint">@color/black</item>

        <!-- Background color. -->
        <item name="backgroundColor">@color/grey_300</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Toolbar colors. -->
        <item name="toolbarColor">@color/white</item>
        <item name="toolbarElementColor">@color/black</item>

        <!-- Profit and deficit colors. -->
        <item name="profitColor">@color/green_profit</item>
        <item name="deficitColor">@color/red_deficit</item>
    </style>
</resources>